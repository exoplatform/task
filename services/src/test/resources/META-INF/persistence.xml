<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="org.exoplatform.task" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>org.exoplatform.task.domain.Project</class>
    <class>org.exoplatform.task.domain.Priority</class>
    <class>org.exoplatform.task.domain.Task</class>
    <class>org.exoplatform.task.domain.Status</class>

    <!-- Test on H2 DB -->
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:target/h2" />
      <property name="javax.persistence.jdbc.user" value="sa" />
      <property name="javax.persistence.jdbc.password" value="" />

      <property name="hibernate.show_sql" value="true" />
    </properties>

  </persistence-unit>
</persistence>