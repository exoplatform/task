          window.jQuery = oldJQuery;
          return $;
        })();
      </adapter>
    </script>
    <depends>
      <module>jquery</module>
    </depends>
    <depends>
      <module>bootstrap_tooltip</module>
    </depends>
    <depends>
      <module>bootstrap_popover</module>
